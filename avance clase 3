#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;
void main(){
int mayor, menor, n, numero, i=1; 
float promedio,suma=0;
cout<<"Ingresar la cantidad de numeros";
cin>>n;
cout<<"Ingresar el primer numero";
cin>>numero;
mayor=numero;
menor=numero;
while(i<=n)
{
if(mayor<numero)
mayor=numero;
if(mayor>numero)
menor=numero;
suma=suma+numero;
i=i+1;
if (i<=n)
{
cout<<"Ingresar otro numero";
cin>>numero;
}
}
cout<<"El mayor es:"<<mayor<<endl;
cout<<"El menor es:"<<menor<<endl;

cout<<"El promedio es:"<<suma/n;
getch();
}
